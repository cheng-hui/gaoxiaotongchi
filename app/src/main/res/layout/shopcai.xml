<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eaeaea">
    <LinearLayout
        android:id="@+id/dian_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/fanhui_shop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/fanhui_right"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:layout_gravity="center"
            android:textSize="50px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/shop_nametwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:layout_marginLeft="60dp"
            android:textSize="65px"
            android:layout_gravity="center"
            android:text="张亮麻辣烫"
            android:textColor="#000000"
            android:layout_weight="6"/>
    </LinearLayout>
<RelativeLayout
    android:id="@+id/r1"
    android:layout_below="@+id/dian_head"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/shop_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@mipmap/jiebiantan" />

    <LinearLayout
        android:id="@+id/star_and_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/shop_head"
        android:paddingLeft="10dp">
        <TextView
          android:layout_marginTop="10dp"
            android:id="@+id/shop_star"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/onestaryellow" />
        <TextView
            android:id="@+id/shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="40px"
            android:text="详细地址" />
        <TextView
            android:id="@+id/shop_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:layout_marginTop="15dp"
            android:text="联系方式"
            />

    </LinearLayout>

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/star_and_shopname"
        android:background="#ffba22"
        android:text="去这里"
        android:textColor="#ffffff" />

</RelativeLayout>
    <TextView
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</RelativeLayout>
    <GridView
        android:id="@+id/caidan_gridview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:columnWidth="200dp"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="2dp"
        android:stretchMode="spacingWidthUniform"
        android:numColumns="2"
        android:background="#ffedc5"
        />
</LinearLayout>
